            });
            
            document.getElementById(type + 'Card').classList.add('selected');
            
            checkStartButtonState();
        }

        // ÙØ­Øµ Ø­Ø§Ù„Ø© Ø²Ø± Ø§Ù„Ø¨Ø¯Ø§ÙŠØ©
        function checkStartButtonState() {
