        async function saveToCloudLeaderboard(finalScore, elapsed, speedBonus) {
            const payload = {
                action: 'SAVE',
                name: playerName,
                userType: userType,
                score: finalScore,
                correctAnswers: score,
                time: elapsed,
                speedBonus: speedBonus
            };

            const options = {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            };

            try {
                const result = await fetchJSON(SCRIPT_URL, options, { timeout: 12000 });
                if (result.status === 'Success') {
                    toast('ØªÙ… Ø­ÙØ¸ Ù†ØªÙŠØ¬ØªÙƒ Ø¨Ù†Ø¬Ø§Ø­ âœ…', { ok: true });
                    return true;
                } else {
                    console.error('Server responded with error:', result.message);
                    toast('ØªØ¹Ø°Ù‘Ø± Ø­ÙØ¸ Ø§Ù„Ù†ØªÙŠØ¬Ø© (Ø±Ø¯Ù‘ Ø§Ù„Ø®Ø§Ø¯Ù…).', { ok: false });
                    return false;
                }
            } catch (err) {
                console.warn('Save failed, retrying onceâ€¦', err.message);
                try {
                    const result2 = await fetchJSON(SCRIPT_URL, options, { timeout: 12000 });
                    if (result2.status === 'Success') {
                        toast('ØªÙ… Ø­ÙØ¸ Ù†ØªÙŠØ¬ØªÙƒ Ø¨Ø¹Ø¯ Ø¥Ø¹Ø§Ø¯Ø© Ø§Ù„Ù…Ø­Ø§ÙˆÙ„Ø© âœ…', { ok: true });
                        return true;
