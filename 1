                </div>
            `;

            document.getElementById('quizOptions').insertAdjacentHTML('afterend', explanationHTML);
            document.getElementById('nextQuizBtn').style.display = 'block';
        }

        function nextQuizQuestion() {
            currentQuizQuestion++;
            showQuizQuestion();
        }

