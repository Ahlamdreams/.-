            document.getElementById('playerBadge').innerHTML = `
                <span>${userIcon}</span>
                <span>${playerName}</span>
                <span style="font-size: 0.9rem; opacity: 0.8;">(${userLabel})</span>
            `;
            
            startTime = Date.now();
            startTimer();
            updateProgress();
            updateScore();
        }

        // Ø¨Ø¯Ø¡ Ø§Ù„Ù…Ø¤Ù‚Øª
        function startTimer() {
            timerInterval = setInterval(() => {
                const elapsed = Math.floor((Date.now() - startTime) / 1000);
                const minutes = Math.floor(elapsed / 60);
                const seconds = elapsed % 60;
                document.getElementById('timerDisplay').textContent = 
                    `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }, 1000);
        }

        // Ø§Ø®ØªÙŠØ§Ø± Ø§Ù„Ø¥Ø¬Ø§Ø¨Ø©
        function selectAnswer(questionNum, visionPart, isCorrect) {
            const buttons = document.querySelectorAll(`#question${questionNum} .answer-option`);
            
            buttons.forEach(btn => {
                btn.disabled = true;
                if (btn.onclick.toString().includes('true')) {
                    btn.classList.add('correct');
                } else if (btn.onclick.toString().includes('false') && btn === event.target) {
                    btn.classList.add('wrong');
                }
            });

            if (isCorrect) {
                score++;
            }

            document.getElementById(`explanation${questionNum}`).classList.add('show');
            document.getElementById(`nextBtn${questionNum}`).classList.add('show');

            updateScore();
        }

        // Ø§Ù„Ø§Ù†ØªÙ‚Ø§Ù„ Ù„Ù„Ø³Ø¤Ø§Ù„ Ø§Ù„ØªØ§Ù„ÙŠ
        function nextQuestion(nextNum) {
            document.getElementById(`question${currentQuestion}`).classList.remove('active');
            
            if (nextNum <= totalQuestions) {
                document.getElementById(`question${nextNum}`).classList.add('active');
                currentQuestion = nextNum;
                updateProgress();
            }
        }

        // ØªØ­Ø¯ÙŠØ« Ø´Ø±ÙŠØ· Ø§Ù„ØªÙ‚Ø¯Ù…
        function updateProgress() {
            const progress = (currentQuestion / totalQuestions) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = `Ø§Ù„Ø³Ø¤Ø§Ù„ ${currentQuestion} Ù…Ù† ${totalQuestions}`;
        }

        // ØªØ­Ø¯ÙŠØ« Ø§Ù„Ù†Ù‚Ø§Ø·
        function updateScore() {
