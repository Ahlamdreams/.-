                        switch(player.userType) {
                            case 'parent':
                                userIcon = 'ğŸ‘¨â€ğŸ‘©â€ğŸ‘§â€ğŸ‘¦';
                                userLabel = 'ÙˆÙ„ÙŠ Ø£Ù…Ø±';
                                userBadgeColor = 'rgba(76, 175, 80, 0.3)';
                                break;
                            case 'student':
                                userIcon = 'ğŸ‘©â€ğŸ“';
                                userLabel = 'Ø·Ø§Ù„Ø¨Ø©';
                                userBadgeColor = 'rgba(33, 150, 243, 0.3)';
                                break;
                            case 'teacher':
                                userIcon = 'ğŸ‘©â€ğŸ«';
                                userLabel = 'Ù‡ÙŠØ¦Ø© ØªØ¹Ù„ÙŠÙ…ÙŠØ©';
                                userBadgeColor = 'rgba(156, 39, 176, 0.3)';
                                break;
                        }
                    }
                    
