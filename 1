                        <div class="rank-badge ${badgeClass}">${rankIcon}</div>
                        
                        <div class="player-details">
                            <div class="player-name">
                                ${userIcon} ${player.name}
                                <span class="user-badge" style="background: ${userBadgeColor};">${userLabel}</span>
                            </div>
                            <div class="player-stats">
                                <div class="stat-item">â±ï¸ ${timeDisplay}</div>
                                <div class="stat-item">âœ… ${player.correctAnswers}/${totalQuestions}</div>
                                ${player.speedBonus > 0 ? `<div class="stat-item speed-bonus">âš¡ +${player.speedBonus}</div>` : ''}
