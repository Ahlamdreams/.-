    <script>
        // *** 🔑 هذا هو رابط الـ Web App الأخير والنهائي (يجب استخدامه): ***
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbwRnlipbjioHEyuiPTbg3t4LD0K4jqNKwTku3HeuJmZDWCeh3CO36DW7jbGKB9EPP1How/exec'; 

        let currentQuestion = 1;
        let score = 0;
        let playerName = '';
        let userType = '';
        let startTime = null;
        let timerInterval = null;
        let currentFilter = 'all';
        const totalQuestions = 6;
        let cachedLeaderboard = []; 

        /* ===================== */
        /* دوالّ مساعدة للأخطاء (للتنفيذ الأمامي) */
        /* ===================== */

        // مهلة للطلبات + إرجاع JSON مع رسائل خطأ واضحة
        async function fetchJSON(url, options = {}, { timeout = 10000 } = {}) {
            const controller = new AbortController();
            const id = setTimeout(() => controller.abort(), timeout);
            try {
                const res = await fetch(url, { ...options, signal: controller.signal });
                const ct = res.headers.get('content-type') || '';

                const raw = await res.text();
                let data = null;
                if (ct.includes('application/json')) {
                    try { data = JSON.parse(raw); } catch (_) { /* سقطت */ }
                }

                if (!res.ok) {
                    throw new Error(`HTTP ${res.status} - ${raw || 'Server error'}`);
                }
                if (!data) {
                    throw new Error('الردّ ليس JSON صالحًا من الخادم.');
                }
                return data;
            } catch (err) {
                if (err.name === 'AbortError') {
                    throw new Error('انتهت المهلة: الخادم لم يستجب بالوقت المطلوب.');
                }
                throw err;
            } finally {
                clearTimeout(id);
            }
        }

        // عرض رسالة خطأ ودّية داخل عنصر معيّن
        function showInlineError(targetEl, { icon = '🚫', title = 'فشل الاتصال', subtitle = 'تعذر الاتصال بالخادم. تأكد من نشر Apps Script بشكل صحيح والسماح بالوصول للجميع.' } = {}) {
            if (!targetEl) return;
            targetEl.innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">${icon}</div>
                    <div class="empty-title">${title}</div>
                    <div class="empty-subtitle">${subtitle}</div>
                </div>
            `;
        }

        // وميض/تنبيه عابر أعلى الصفحة (اختياري)
        function toast(message, { ok = false } = {}) {
            const box = document.createElement('div');
            box.style.cssText = `
                position: fixed; top: 20px; left: 50%; transform: translateX(-50%);
                z-index: 2000; padding: 14px 18px; border-radius: 16px;
                font-weight: 700; font-size: 0.95rem;
                background: ${ok ? 'linear-gradient(145deg,#4CAF50,#45a049)' : 'linear-gradient(145deg,#f44336,#d32f2f)'};
                color: #fff; box-shadow: 0 12px 28px rgba(0,0,0,0.25);
            `;
            box.textContent = message;
            document.body.appendChild(box);
            setTimeout(() => box.remove(), 3000);
        }

        /* ========================================= */
        /* حفظ النتيجة إلى السحابة (SAVE - طلب POST) */
        /* ========================================= */

        async function saveToCloudLeaderboard(finalScore, elapsed, speedBonus) {
            const payload = {
                action: 'SAVE',
                name: playerName,
                userType: userType,
                score: finalScore,
                correctAnswers: score,
                time: elapsed,
                speedBonus: speedBonus
            };

            const options = {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            };

            try {
                const result = await fetchJSON(SCRIPT_URL, options, { timeout: 12000 });
                if (result.status === 'Success') {
                    toast('تم حفظ نتيجتك بنجاح ✅', { ok: true });
                    return true;
                } else {
                    console.error('Server responded with error:', result.message);
                    toast('تعذّر حفظ النتيجة (ردّ الخادم).', { ok: false });
                    return false;
                }
            } catch (err) {
                console.warn('Save failed, retrying once…', err.message);
                try {
                    const result2 = await fetchJSON(SCRIPT_URL, options, { timeout: 12000 });
                    if (result2.status === 'Success') {
                        toast('تم حفظ نتيجتك بعد إعادة المحاولة ✅', { ok: true });
                        return true;
                    } else {
                        console.error('Server responded with error (retry):', result2.message);
                        toast('تعذّر حفظ النتيجة بعد إعادة المحاولة.', { ok: false });
                        return false;
                    }
                } catch (err2) {
                    console.error('Final save error:', err2.message);
                    toast('فشل الاتصال عند حفظ النتيجة. تأكد من إعداد Web App.', { ok: false });
                    return false;
                }
            }
        }

        /* ========================================= */
        /* تحميل لوحة الصدارة من السحابة (LOAD - JSONP) */
        /* ========================================= */
        
        // هذه الدالة تتعامل مع رد السكريبت عند طلب التحميل (JSONP Callback)
        window.handleLeaderboardResponse = (data) => {
            const leadersList = document.getElementById('leadersList');
            
            if (data.status === 'Success' && Array.isArray(data.leaderboard)) {
                cachedLeaderboard = data.leaderboard;
                displayLeaderboardUI(cachedLeaderboard, currentFilter);
                if (!cachedLeaderboard.length) {
                    showInlineError(leadersList, { icon: '🎯', title: 'لا توجد نتائج بعد', subtitle: 'كن أول من يحقق نتيجة رائعة!' });
                }
            } else {
                showInlineError(leadersList, { icon: '⚠️', title: 'خطأ في التحميل', subtitle: 'الخادم لم يرجع بيانات صحيحة. (الخطأ: ' + (data.message || 'غير معروف') + ')' });
            }
        };

        async function loadLeaderboardFromCloud() {
            const leadersList = document.getElementById('leadersList');
            showInlineError(leadersList, {
                icon: '🔄',
                title: 'يتم تحميل النتائج...',
                subtitle: 'نستخدم طريقة تحميل مضمونة (JSONP)...'
            });

            const payload = { action: 'LOAD' };
            
            // إنشاء رابط التحميل باستخدام JSONP
            const url = SCRIPT_URL + '?action=' + payload.action + '&callback=handleLeaderboardResponse';

            try {
                // إرسال طلب JSONP عن طريق إضافة عنصر سكريبت ديناميكي
                const script = document.createElement('script');
                script.src = url;
                script.onerror = () => {
                    showInlineError(leadersList, {
                        icon: '🚫',
                        title: 'فشل الاتصال',
                        subtitle: "خطأ في تحميل السكريبت. تأكد من أن الرابط (SCRIPT_URL) صحيح ومتاح لـ 'أي شخص'."
                    });
                };
                document.head.appendChild(script);

                // تنظيف DOM بعد التحميل
                setTimeout(() => {
                    if (script.parentNode) script.parentNode.removeChild(script);
                }, 5000); 

            } catch (err) {
                console.error('JSONP failed:', err.message);
                showInlineError(leadersList, {
                    icon: '🚫',
                    title: 'فشل الاتصال',
                    subtitle: `خطأ عام: ${err.message}. تحقق من إعدادات الشبكة.`
                });
            }
        }


        // إنشاء الجزيئات المتحركة
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 8;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 30 + 's';
                particle.style.animationDuration = '30s';
                particlesContainer.appendChild(particle);
            }
        }

        // اختيار نوع المستخدم
        function selectUserType(type) {
            userType = type;
            
            document.querySelectorAll('.user-type-card').forEach(card => {
                card.classList.remove('selected');
            });
            
            document.getElementById(type + 'Card').classList.add('selected');
            
            checkStartButtonState();
        }

        // فحص حالة زر البداية
        function checkStartButtonState() {
            const name = document.getElementById('playerName').value.trim();
            const startBtn = document.getElementById('startButton');
            
            if (name.length >= 2 && userType) {
                startBtn.disabled = false;
                startBtn.style.opacity = '1';
            } else {
                startBtn.disabled = true;
                startBtn.style.opacity = '0.5';
            }
        }

        // بدء اللعبة
        function startGame() {
            playerName = document.getElementById('playerName').value.trim();
            if (playerName.length < 2 || !userType) return;

            let userIcon = '';
            let userLabel = '';
            switch(userType) {
                case 'parent':
                    userIcon = '👨‍👩‍👧‍👦';
                    userLabel = 'ولي أمر';
                    break;
                case 'student':
                    userIcon = '👩‍🎓';
                    userLabel = 'طالبة';
                    break;
                case 'teacher':
                    userIcon = '👩‍🏫';
                    userLabel = 'هيئة تعليمية';
                    break;
            }

            document.getElementById('welcomeScreen').style.display = 'none';
            document.getElementById('gameScreen').style.display = 'block';
            document.getElementById('displayName').textContent = playerName;
            document.getElementById('playerBadge').innerHTML = `
                <span>${userIcon}</span>
                <span>${playerName}</span>
                <span style="font-size: 0.9rem; opacity: 0.8;">(${userLabel})</span>
            `;
            
            startTime = Date.now();
            startTimer();
            updateProgress();
            updateScore();
        }

        // بدء المؤقت
        function startTimer() {
            timerInterval = setInterval(() => {
                const elapsed = Math.floor((Date.now() - startTime) / 1000);
                const minutes = Math.floor(elapsed / 60);
                const seconds = elapsed % 60;
                document.getElementById('timerDisplay').textContent = 
                    `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }, 1000);
        }

        // اختيار الإجابة
        function selectAnswer(questionNum, visionPart, isCorrect) {
            const buttons = document.querySelectorAll(`#question${questionNum} .answer-option`);
            
            buttons.forEach(btn => {
                btn.disabled = true;
                if (btn.onclick.toString().includes('true')) {
                    btn.classList.add('correct');
                } else if (btn.onclick.toString().includes('false') && btn === event.target) {
                    btn.classList.add('wrong');
                }
            });

            if (isCorrect) {
                score++;
            }

            document.getElementById(`explanation${questionNum}`).classList.add('show');
            document.getElementById(`nextBtn${questionNum}`).classList.add('show');

            updateScore();
        }

        // الانتقال للسؤال التالي
        function nextQuestion(nextNum) {
            document.getElementById(`question${currentQuestion}`).classList.remove('active');
            
            if (nextNum <= totalQuestions) {
                document.getElementById(`question${nextNum}`).classList.add('active');
                currentQuestion = nextNum;
                updateProgress();
            }
        }

        // تحديث شريط التقدم
        function updateProgress() {
            const progress = (currentQuestion / totalQuestions) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = `السؤال ${currentQuestion} من ${totalQuestions}`;
        }

        // تحديث النقاط
        function updateScore() {
            document.getElementById('scoreDisplay').textContent = `النقاط: ${score} / ${totalQuestions}`;
        }

        // إظهار لعبة ترتيب الرؤية
        function showVisionPuzzle() {
            document.getElementById('gameScreen').style.display = 'none';
            document.getElementById('visionPuzzleScreen').style.display = 'block';
            
            shufflePuzzleWords();
            initializeDragAndDrop();
        }

        // خلط كلمات الأحجية
        function shufflePuzzleWords() {
            const wordsContainer = document.getElementById('puzzleWords');
            const words = Array.from(wordsContainer.children);
            
            for (let i = words.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [words[i], words[j]] = [words[j], words[i]];
            }
            
            words.forEach(word => wordsContainer.appendChild(word));
        }

        // تهيئة نظام الضغط للاختيار
        function initializeDragAndDrop() {
            const wordCards = document.querySelectorAll('.word-card');
            wordCards.forEach(card => {
                card.removeEventListener('click', handleWordClick); 
                card.addEventListener('click', handleWordClick);
            });
        }

        let selectedWord = null;

        function handleWordClick() {
            const dropZone = document.getElementById('dropZone');
            
            const droppedWord = document.createElement('div');
            droppedWord.className = 'dropped-word';
            droppedWord.textContent = this.textContent;
            droppedWord.dataset.word = this.dataset.word;
            
            const originalCard = this;
            
            droppedWord.addEventListener('click', function() {
                this.remove();
                originalCard.style.display = 'block';
                updatePuzzleButtons();
                
                const remainingWords = dropZone.querySelectorAll('.dropped-word');
                if (remainingWords.length === 0) {
                    const dropHint = dropZone.querySelector('.drop-hint');
                    if (dropHint) {
                        dropHint.style.display = 'block';
                    }
                }
            });
            
            const dropHint = dropZone.querySelector('.drop-hint');
            if (dropHint) {
                dropHint.style.display = 'none';
            }
            
            dropZone.appendChild(droppedWord);
            this.style.display = 'none';
            
            updatePuzzleButtons();
        }

        function updatePuzzleButtons() {
            const dropZone = document.getElementById('dropZone');
            const droppedWords = dropZone.querySelectorAll('.dropped-word');
            const checkBtn = document.getElementById('checkPuzzleBtn');
            
            checkBtn.disabled = droppedWords.length !== 6;
        }

        function checkPuzzleOrder() {
            const dropZone = document.getElementById('dropZone');
            const droppedWords = Array.from(dropZone.querySelectorAll('.dropped-word'));
            
            const correctOrder = [
                'تعليم متطور',
                'يوظف التقانة بكفاءة', 
                'مع',
                'تعلم مستدام',
                'وشراكة مجتمعية',
                'فاعلة'
            ];
            
            const userOrder = droppedWords.map(word => word.dataset.word);
            const isCorrect = JSON.stringify(userOrder) === JSON.stringify(correctOrder);
            
            if (isCorrect) {
                document.getElementById('puzzleResult').style.display = 'block';
                document.getElementById('checkPuzzleBtn').style.display = 'none';
                document.getElementById('continueToCelebration').style.display = 'inline-block';
                
                droppedWords.forEach((word, index) => {
                    setTimeout(() => {
                        word.style.background = 'linear-gradient(145deg, #ffd700, #ffed4e)';
                        word.style.color = '#333';
                        word.style.transform = 'scale(1.05)';
                    }, index * 200);
                });
            } else {
                const errorMsg = document.createElement('div');
                errorMsg.style.cssText = `
                    position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);
                    background: linear-gradient(145deg, #f44336, #d32f2f);
                    color: white; padding: 20px 30px; border-radius: 20px;
                    font-size: 1.2rem; font-weight: bold; z-index: 1001;
                    box-shadow: 0 15px 35px rgba(244, 67, 54, 0.5);
                    text-align: center;
                `;
                errorMsg.innerHTML = '❌ الترتيب غير صحيح! حاول مرة أخرى';
                document.body.appendChild(errorMsg);
                
                setTimeout(() => {
                    if (document.body.contains(errorMsg)) {
                        document.body.removeChild(errorMsg);
                    }
                }, 3000);
            }
        }

        function resetPuzzle() {
            const dropZone = document.getElementById('dropZone');
            const wordCards = document.querySelectorAll('.word-card');
            
            wordCards.forEach(card => {
                card.style.display = 'block';
                card.style.background = 'linear-gradient(145deg, #667eea, #764ba2)';
                card.style.color = 'white';
                card.style.transform = 'none';
                card.classList.remove('selected');
            });
            
            dropZone.innerHTML = '<div class="drop-hint">اضغط على الكلمات لترتيب الرؤية هنا</div>';
            
            document.getElementById('puzzleResult').style.display = 'none';
            document.getElementById('checkPuzzleBtn').style.display = 'inline-block';
            document.getElementById('continueToCelebration').style.display = 'none';
            
            shufflePuzzleWords();
            updatePuzzleButtons();
        }

        // إظهار الاحتفال النهائي
        function showFinalCelebration() {
            clearInterval(timerInterval);
            
            const elapsed = Math.floor((Date.now() - startTime) / 1000);
            let speedBonus = 0;
            let speedMessage = '';
            
            if (score === totalQuestions) {
                if (elapsed <= 60) {
                    speedBonus = 100;
                    speedMessage = '🏆 بطل السرعة! أقل من دقيقة! +100 نقطة';
                } else if (elapsed <= 90) {
                    speedBonus = 75;
                    speedMessage = '⚡ سرعة رائعة! أقل من دقيقة ونصف! +75 نقطة';
                } else if (elapsed <= 120) {
                    speedBonus = 50;
                    speedMessage = '🚀 أداء سريع! أقل من دقيقتين! +50 نقطة';
                } else if (elapsed <= 180) {
                    speedBonus = 25;
                    speedMessage = '⏰ وقت جيد! أقل من 3 دقائق! +25 نقطة';
                }
            }
            
            const finalScore = score * 100 + speedBonus;

            // إظهار رسالة المكافأة
            if (speedBonus > 0) {
                setTimeout(() => {
                    const speedMsg = document.createElement('div');
                    speedMsg.style.cssText = `
                        position: fixed; top: 20%; left: 50%; transform: translate(-50%, -50%);
                        background: linear-gradient(145deg, #ffd700, #ffed4e);
                        color: #333; padding: 25px 35px; border-radius: 25px;
                        font-size: 1.3rem; font-weight: bold; z-index: 1001;
                        box-shadow: 0 20px 50px rgba(255, 215, 0, 0.5);
                        animation: celebrationPop 1s ease; text-align: center;
                    `;
                    speedMsg.innerHTML = speedMessage;
                    document.body.appendChild(speedMsg);
                    
                    setTimeout(() => {
                        if (document.body.contains(speedMsg)) {
                            document.body.removeChild(speedMsg);
                        }
                    }, 4000);
                }, 500);
            }
            
            // حفظ النتيجة في السحابة
            saveToCloudLeaderboard(finalScore, elapsed, speedBonus).then(() => {
                // بعد الحفظ بنجاح، أظهر لوحة الصدارة
                setTimeout(() => {
                    document.getElementById('visionPuzzleScreen').style.display = 'none';
                    showLeaderboard();
                    document.getElementById('backToWelcomeBtn').style.display = 'inline-block';
                    document.getElementById('backToGameBtn').style.display = 'none';
                    document.getElementById('backToWelcomeBtn').innerHTML = '🏠 العودة للرئيسية';
                }, speedBonus > 0 ? 2000 : 500);
            });
        }

        // إغلاق رسالة الاحتفال
        function closeCelebration() {
            document.getElementById('celebrationOverlay').classList.remove('show');
        }

        // عرض لوحة الصدارة باستخدام البيانات المُخزنة مؤقتًا (UI)
        function displayLeaderboardUI(leaderboardData, filterType = 'all') {
            
            let filteredData = leaderboardData;
            if (filterType !== 'all') {
                filteredData = leaderboardData.filter(player => player.userType === filterType);
            }
            
            updateLeaderboardStats(filteredData);
            
            const leadersList = document.getElementById('leadersList');
            
            if (filteredData.length === 0) {
                leadersList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">🎯</div>
                        <div class="empty-title">لا توجد نتائج</div>
                        <div class="empty-subtitle">
                            ${filterType === 'all' ? 'لم يلعب أحد بعد!' : 'لا توجد نتائج لهذه الفئة'}<br>
                            كن أول من يحقق نتيجة رائعة!
                        </div>
                    </div>
                `;
            } else {
                leadersList.innerHTML = '';
                filteredData.forEach((player, index) => {
                    const item = document.createElement('div');
                    item.className = 'leader-item';
                    
                    if (index < 3) item.classList.add('top-rank');
                    if (index === 0) item.classList.add('champion');
                    
                    let badgeClass = 'regular';
                    let rankIcon = index + 1;
                    if (index === 0) {
                        badgeClass = 'gold';
                        rankIcon = '👑';
                    } else if (index === 1) {
                        badgeClass = 'silver';
                        rankIcon = '🥈';
                    } else if (index === 2) {
                        badgeClass = 'bronze';
                        rankIcon = '🥉';
                    }
                    
                    const timeInSeconds = parseInt(player.time) || 0;
                    const minutes = Math.floor(timeInSeconds / 60);
                    const seconds = timeInSeconds % 60;
                    const timeDisplay = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                    
                    let userIcon = '👤';
                    let userLabel = '';
                    let userBadgeColor = 'rgba(255, 255, 255, 0.2)';
                    
                    if (player.userType) {
                        switch(player.userType) {
                            case 'parent':
                                userIcon = '👨‍👩‍👧‍👦';
                                userLabel = 'ولي أمر';
                                userBadgeColor = 'rgba(76, 175, 80, 0.3)';
                                break;
                            case 'student':
                                userIcon = '👩‍🎓';
                                userLabel = 'طالبة';
                                userBadgeColor = 'rgba(33, 150, 243, 0.3)';
                                break;
                            case 'teacher':
                                userIcon = '👩‍🏫';
                                userLabel = 'هيئة تعليمية';
                                userBadgeColor = 'rgba(156, 39, 176, 0.3)';
                                break;
                        }
                    }
                    
                    item.innerHTML = `
                        <div class="rank-badge ${badgeClass}">${rankIcon}</div>
                        
                        <div class="player-details">
                            <div class="player-name">
                                ${userIcon} ${player.name}
                                <span class="user-badge" style="background: ${userBadgeColor};">${userLabel}</span>
                            </div>
                            <div class="player-stats">
                                <div class="stat-item">⏱️ ${timeDisplay}</div>
                                <div class="stat-item">✅ ${player.correctAnswers}/${totalQuestions}</div>
                                ${player.speedBonus > 0 ? `<div class="stat-item speed-bonus">⚡ +${player.speedBonus}</div>` : ''}
                                <div class="stat-item">📅 ${player.date}</div>
                            </div>
                        </div>
                        
                        <div class="score-display">
                            <div class="final-score">${player.score}</div>
                            <div class="score-details">
                                ${player.correctAnswers} إجابة
                                ${player.speedBonus > 0 ? `<br><span class="speed-bonus">+${player.speedBonus} سرعة</span>` : ''}
                            </div>
                        </div>
                    `;
                    
                    leadersList.appendChild(item);
                });
            }
        }

        // دالة عرض لوحة الصدارة الرئيسية
        function displayLeaderboard(filterType = 'all') {
            currentFilter = filterType;
            loadLeaderboardFromCloud();
        }

        // تحديث إحصائيات لوحة الصدارة
        function updateLeaderboardStats(data) {
            const totalPlayers = data.length;
            const averageScore = totalPlayers > 0 ? Math.round(data.reduce((sum, p) => sum + p.score, 0) / totalPlayers) : 0;
            const perfectScores = data.filter(p => p.correctAnswers === 6).length;  
            const speedChampions = data.filter(p => p.speedBonus >= 75).length;
            
            document.getElementById('leaderboardStats').innerHTML = `
                <div class="stat-card">
                    <span class="stat-number">${totalPlayers}</span>
                    <span class="stat-label">لاعب</span>
                </div>
                <div class="stat-card">
                    <span class="stat-number">${averageScore}</span>
                    <span class="stat-label">متوسط النقاط</span>
                </div>
                <div class="stat-card">
                    <span class="stat-number">${perfectScores}</span>
                    <span class="stat-label">نتيجة مثالية</span>
                </div>
                <div class="stat-card">
                    <span class="stat-number">${speedChampions}</span>
                    <span class="stat-label">بطل سرعة</span>
                </div>
            `;
        }

        // تصفية لوحة الصدارة
        function filterLeaderboard(type) {
            currentFilter = type;
            
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            displayLeaderboardUI(cachedLeaderboard, type);
        }

        // إظهار لوحة الصدارة من الترحيب
        function showWelcomeLeaderboard() {
            displayLeaderboard('all'); 
            document.getElementById('welcomeScreen').style.display = 'none';
            document.getElementById('leaderboardScreen').style.display = 'block';
            document.getElementById('backToWelcomeBtn').style.display = 'inline-block';
            document.getElementById('backToGameBtn').style.display = 'none';
        }

        // إظهار لوحة الصدارة من اللعبة
        function showLeaderboard() {
            displayLeaderboard('all');  
            document.getElementById('celebrationOverlay').classList.remove('show');
            document.getElementById('gameScreen').style.display = 'none';
            document.getElementById('visionPuzzleScreen').style.display = 'none';
            document.getElementById('leaderboardScreen').style.display = 'block';
            document.getElementById('backToWelcomeBtn').style.display = 'none';
            document.getElementById('backToGameBtn').style.display = 'inline-block';
        }

        // إخفاء لوحة الصدارة
        function hideLeaderboard() {
            document.getElementById('leaderboardScreen').style.display = 'none';
            document.getElementById('gameScreen').style.display = 'block';
        }

        // العودة للترحيب
        function backToWelcome() {
            document.getElementById('leaderboardScreen').style.display = 'none';
            document.getElementById('welcomeScreen').style.display = 'flex';
        }


        // إعادة تشغيل اللعبة
        function restartGame() {
            currentQuestion = 1;
            score = 0;
            userType = '';
            
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            
            document.getElementById('celebrationOverlay').classList.remove('show');
            document.getElementById('gameScreen').style.display = 'none';
            document.getElementById('leaderboardScreen').style.display = 'none';
            document.getElementById('visionPuzzleScreen').style.display = 'none';
            
            for (let i = 1; i <= totalQuestions; i++) {
                const questionContainer = document.getElementById(`question${i}`);
                questionContainer.classList.remove('active');
                
                const buttons = questionContainer.querySelectorAll('.answer-option');
                buttons.forEach(btn => {
                    btn.disabled = false;
                    btn.classList.remove('correct', 'wrong');
                });
                
                document.getElementById(`explanation${i}`).classList.remove('show');
                document.getElementById(`nextBtn${i}`).classList.remove('show');
            }
            
            resetPuzzle();
            
            document.getElementById('welcomeScreen').style.display = 'flex';
            document.getElementById('playerName').value = '';
            document.getElementById('startButton').disabled = true;
            document.getElementById('startButton').style.opacity = '0.5';
            
            document.querySelectorAll('.user-type-card').forEach(card => {
                card.classList.remove('selected');
            });
            
            document.getElementById('question1').classList.add('active');
        }

        // تهيئة التطبيق
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            
            document.getElementById('playerName').addEventListener('input', checkStartButtonState);
            
            updateProgress();
            updateScore();
        });
    </script>
