                    userLabel = 'Ø·Ø§Ù„Ø¨Ø©';
                    break;
                case 'teacher':
                    userIcon = 'ğŸ‘©â€ğŸ«';
                    userLabel = 'Ù‡ÙŠØ¦Ø© ØªØ¹Ù„ÙŠÙ…ÙŠØ©';
                    break;
            }

