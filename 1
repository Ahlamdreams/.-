        function switchTab(criterionId, tabType) {
            // Ø¥Ø®ÙØ§Ø¡ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…Ø­ØªÙˆÙŠØ§Øª
            document.querySelectorAll(`[id^="tab-${criterionId}-"]`).forEach(tab => {
                tab.classList.remove('active');
            });
            
