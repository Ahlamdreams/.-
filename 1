                'ØªØ¹Ù„Ù… Ù…Ø³ØªØ¯Ø§Ù…',
                'ÙˆØ´Ø±Ø§ÙƒØ© Ù…Ø¬ØªÙ…Ø¹ÙŠØ©',
                'ÙØ§Ø¹Ù„Ø©'
            ];
            
            const userOrder = droppedWords.map(word => word.dataset.word);
            const isCorrect = JSON.stringify(userOrder) === JSON.stringify(correctOrder);
            
            if (isCorrect) {
                document.getElementById('puzzleResult').style.display = 'block';
                document.getElementById('checkPuzzleBtn').style.display = 'none';
                document.getElementById('continueToCelebration').style.display = 'inline-block';
                
                droppedWords.forEach((word, index) => {
                    setTimeout(() => {
                        word.style.background = 'linear-gradient(145deg, #ffd700, #ffed4e)';
                        word.style.color = '#333';
                        word.style.transform = 'scale(1.05)';
                    }, index * 200);
                });
            } else {
                const errorMsg = document.createElement('div');
                errorMsg.style.cssText = `
                    position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);
                    background: linear-gradient(145deg, #f44336, #d32f2f);
                    color: white; padding: 20px 30px; border-radius: 20px;
                    font-size: 1.2rem; font-weight: bold; z-index: 1001;
                    box-shadow: 0 15px 35px rgba(244, 67, 54, 0.5);
