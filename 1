                        timeElement.style.color = '#f39c12';
                        timeElement.style.fontWeight = 'bold';
                    }
                }
            }, 1000);
        }

        function stopQuizTimer() {
            if (quizTimer) {
                clearInterval(quizTimer);
                quizTimer = null;
            }
